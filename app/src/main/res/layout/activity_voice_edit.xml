<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:id="@+id/activity_voice_edit_layout"
    tools:context="com.example.helena.voicedit_android.activity.VoiceEditActivity">
    <TextView
        android:text="简单语音填表"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#ff0000"
        android:text="warn:\n此表单用于简单语音填表的演示，未实现持久化功能，即您所填写的内容在退出此页面后将不会被保存"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="16dp"
        android:textColor="@color/colorAccent"
        android:text="tips:\n请点击“语音录入”（无需按住）后，按照“key value”的格式说出您希望录入的内容，如“姓名 张三 年龄 22”"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/iat_text"
            android:hint="这里将显示每次的听写结果"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/iat_recognize"
            android:text="@string/button_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <!--<EditText-->
        <!--android:id="@+id/json_result"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"/>-->
</LinearLayout>
